-- FUN√á√ÉO COPIAR
local function copiar(texto)
   pcall(function()
      setclipboard(texto)
   end)

   Rayfield:Notify({
      Title = "Copiado!",
      Content = "Prompt copiado para o CTRL + C",
      Duration = 2
   })
end

